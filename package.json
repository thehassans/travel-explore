{
  "name": "explore-holidays",
  "version": "1.0.0",
  "description": "Premium Travel Booking Platform - Explore Holidays",
  "main": "server/index.js",
  "engines": {
    "node": ">=24.11.1"
  },
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "production": "npm run build && npm start"
  },
  "keywords": [
    "travel",
    "holidays",
    "flights",
    "visas",
    "bangladesh",
    "booking"
  ],
  "author": "Explore Holidays",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mariadb": "^3.2.2",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
